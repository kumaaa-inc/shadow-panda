{
  "name": "@shadow-panda/style-context",
  "description": "Shared style context for slot recipes in ShadowPanda",
  "version": "0.7.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "homepage": "https://shadow-panda.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kumaaa-inc/shadow-panda.git"
  },
  "bugs": {
    "url": "https://github.com/kumaaa-inc/shadow-panda/issues"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
